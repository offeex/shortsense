{
  "compilerOptions": {
    "module": "CommonJS",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2021",
    "outDir": "./dist",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*.ts", ".eslintrc.js", "jest.config.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
